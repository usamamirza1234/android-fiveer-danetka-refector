<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@drawable/shp_rounded_thm_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lay_dictionary_txv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Master"
                android:textAllCaps="true"
                android:textColor="@color/app_black_color"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lay_results_txv_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/thm_blue_app"
                android:textSize="@dimen/fontsize_small"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lay_dictionary_txv_meaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Investigator"
                android:textAllCaps="true"
                android:textColor="@color/app_black_color"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lay_results_txv_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/thm_blue_app"
                android:textSize="@dimen/fontsize_small"
      />

        </RelativeLayout>

    <LinearLayout

        android:id="@+id/lay_results_ll_extended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Number of Investigator"
                android:textAllCaps="true"
                android:textColor="@color/app_black_color"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/lay_results_txv_invest_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="2"
                android:textAllCaps="true"
                android:textColor="@color/thm_blue_app"
                android:textSize="@dimen/fontsize_small"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Rigoletto(s) Used"
                android:textAllCaps="true"
                android:textColor="@color/app_black_color"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/lay_results_txv_regilto_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="2"
                android:textAllCaps="true"
                android:textColor="@color/thm_blue_app"
                android:textSize="@dimen/fontsize_small"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Time"
                android:textAllCaps="true"
                android:textColor="@color/app_black_color"
                android:textStyle="bold"
                android:textSize="@dimen/fontsize_small"
                />

            <TextView
                android:id="@+id/lay_results_txv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="2" android:layout_alignParentEnd="true"
                android:textAllCaps="true"
                android:textColor="@color/thm_blue_app"
                android:textSize="@dimen/fontsize_small" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Date"
                android:textColor="@color/app_black_color"
                android:textStyle="bold"
                android:textAllCaps="true"

                android:textSize="@dimen/fontsize_small"
                />

            <TextView
                android:id="@+id/lay_results_txv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="2"
                android:textAllCaps="true"
                android:textColor="@color/thm_blue_app"
                android:textSize="@dimen/fontsize_small"
                />

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>