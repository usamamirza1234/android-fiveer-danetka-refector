<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/act_intro_rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include layout="@layout/act_lay_toolabar" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:background="@drawable/ic_bg_about"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/frg_presigin_rlPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_shp_about">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/aladin_regular"
                        android:padding="10dp"

                        android:text="About us"
                        android:textColor="@color/thm_orange_app"
                        android:textSize="@dimen/fontsize_extralarge"
                        android:textStyle="bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"

                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <RelativeLayout
                        android:id="@+id/rlBg_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"

                        android:background="@drawable/ic_shp_game_creator" />


                    <LinearLayout
                        android:id="@+id/llBg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="GAME CREATORS"
                                android:textColor="@color/thm_red_app"
                                android:textSize="@dimen/fontsize_xxlarge"
                                android:textStyle="bold" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="10dp"

                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="@string/creators"
                                    android:textColor="@color/thm_orange_app"
                                    android:textSize="@dimen/fontsize_small" />


                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="-7dp"
                                    android:background="@drawable/ic_bow" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/frg_about_txv_creator_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginStart="10dp"

                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:padding="5dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="Portuguese and Armenian musicians and board game geeks. You can usually find Francisco annoying his closest friends with long philosophical talks. Gayane can play games 25/7, she wakes up 1 hour earlier to do so. They love to travel and learn languages. Francisco is an unprofessional swimmer. Gayane is aquaphobic."
                                android:textColor="@color/thm_black_app"
                                android:textSize="@dimen/fontsize_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/heading"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Illustrations"
                                    android:textColor="@color/thm_red_app"
                                    android:textSize="@dimen/fontsize_xxlarge"
                                    android:textStyle="bold" />


                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_below="@id/heading"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="-23dp"
                                    android:layout_marginTop="-55dp"
                                    android:background="@drawable/ic_joker" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/heading"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="10dp"

                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Anna Hamamjan"
                                    android:textColor="@color/thm_orange_app"
                                    android:textSize="@dimen/fontsize_small" />
                            </RelativeLayout>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="-20dp"

                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:padding="10dp"
                                android:text="Anna is an introvert. She likes to be alone and draw all day long. She adores animals, especially dogs. She is interested in their psychology and she is writing a comic book about it. Anna loves animations and she has many plans for the future. She also loves listening to music, playing petanque and tennis."
                                android:textColor="@color/thm_black_app"
                                android:textSize="@dimen/fontsize_mini" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/heading1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Designers"
                                    android:textColor="@color/thm_red_app"
                                    android:textSize="@dimen/fontsize_xxlarge"
                                    android:textStyle="bold" />


                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="58dp"
                                    android:layout_below="@id/heading1"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="-25dp"
                                    android:layout_marginEnd="-5dp"
                                    android:background="@drawable/ic_walking" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/heading1"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Lilith Gasparyan"
                                    android:textColor="@color/thm_orange_app"
                                    android:textSize="@dimen/fontsize_small" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginStart="10dp"

                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:padding="5dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="A sleepaholic and a messy person. She believes that the greatest ideas come from dreams. Lilith adores playing tennis, singing and broccoli."
                                android:textColor="@color/thm_black_app"
                                android:textSize="@dimen/fontsize_mini" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/heading1"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Nairi Lokmagyozyan"
                                android:textColor="@color/thm_orange_app"
                                android:textSize="@dimen/fontsize_small" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_marginStart="10dp"

                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:padding="5dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="Nairi constantly annoys herself by being a perfectionist. She loves doing designs but hates to repeat things after someone. She loves to be the master of her own time. Favourite time of the day - breakfast."
                                android:textColor="@color/thm_black_app"
                                android:textSize="@dimen/fontsize_mini" />

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>