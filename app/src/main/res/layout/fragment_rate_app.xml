<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/act_intro_rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include layout="@layout/act_lay_toolabar" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/frg_presigin_txvPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/aladin_regular"
                    android:padding="10dp"
                    android:text="Results \t\t"
                    android:textColor="@color/thm_orange_app"
                    android:textSize="@dimen/fontsize_extralarge"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/frg_my_results_ll_NewResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:text="Master"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_small"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/frg_my_results_edt_master"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:hint="Master Name"

                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_small" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:text="Number of Investigator"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_small"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/frg_my_results_txv_invest_num"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:hint="Enter name"
                        android:paddingStart="25dp"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingEnd="25dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_small" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:text="Investigator(s)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_small"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/frg_my_results_edt_invest"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:hint="Enter Name"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_small" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:text="No of Rigoletto used"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_small"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp">

                        <Spinner
                            android:id="@+id/frg_signup_cmplt_spinr_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/edttext_height_medium"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="end"
                            android:popupBackground="@color/white"

                            />

                        <TextView
                            android:id="@+id/frg_signup_cmplt_spinr_txvGend"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_large"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="end"
                            android:background="@null"
                            android:clickable="false"
                            android:cursorVisible="true"
                            android:gravity="center"
                            android:lines="1"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:paddingBottom="@dimen/edttext_font_padding"
                            android:text=""
                            android:textColor="@color/black"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/fontsize_small" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:text="Time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_small"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/frg_my_results_edt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:hint=""
                        android:inputType="time"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_small" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/frg_my_results_ll_save_results"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_app_blue"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:lines="1"

                            android:paddingEnd="10dp"
                            android:text="Save my Results"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_medium"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_list" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frg_my_results_ll_saved_results"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"

                        android:background="@drawable/shp_rect_rounded_app_green"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"

                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:lines="1"
                            android:paddingEnd="5dp"

                            android:text="Results Saved"

                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_medium"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_white_tick" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/aladin_regular"
                    android:padding="10dp"
                    android:text="Rate the Danetka"
                    android:textColor="@color/thm_orange_app"
                    android:textSize="@dimen/fontsize_extralarge"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--                <RatingBar
                                    style="@style/CustomRatingBarStyle"
                                    android:stepSize="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:scaleX="1"
                                    android:scaleY="1"
                                    android:transformPivotX="0dp"
                                    android:transformPivotY="0dp"
                                    android:isIndicator="true"
                                    android:max="5"/>-->

                <RatingBar
                    android:id="@+id/simpleRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:rating="0"
                    android:stepSize="1" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/txv_enter_coment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/shp_rect_rounded_white_medium"
                android:orientation="vertical"
>

                <EditText
                    android:id="@+id/frg_make_edtAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="start"
                    android:hint="Type here..."
                    android:lines="4"
                    android:paddingStart="14dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/app_thm_txv_gray"
                    android:textColorHint="@color/app_thm_txv_gray"
                    android:textCursorDrawable="@null" />


                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imv_send"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_note" />
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_leave_coment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:layout_margin="30dp"
                android:background="@drawable/shp_rect_rounded_app_blue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Leave a Comment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_height_xxxsmall"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_comnt_sent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:layout_margin="30dp"
                android:background="@drawable/shp_rect_rounded_app_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Comment Sent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_height_xxxsmall"
                    android:textStyle="bold" />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
