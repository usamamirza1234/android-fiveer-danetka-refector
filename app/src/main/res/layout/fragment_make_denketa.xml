<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start"
                android:paddingStart="14dp"
                android:text="Title*"
                android:textColor="@color/thm_red_app"
                android:textSize="@dimen/fontsize_xxlarge"
                android:textStyle="bold" />

            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:sl_cornerRadius="24dp"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="@color/thm_shadow"
                app:sl_shadowRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shp_rect_rounded_white_medium"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/frg_make_edtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="start|center_vertical"
                        android:hint="Type here..."
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textColor="@color/thm_blue_app"
                        android:textColorHint="@color/app_thm_txv_gray"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_mini" />
                </RelativeLayout>
            </com.dd.ShadowLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start"
                android:paddingStart="14dp"
                android:text="Riddle*"
                android:textColor="@color/thm_red_app"
                android:textSize="@dimen/fontsize_xxlarge"
                android:textStyle="bold" />

            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:sl_cornerRadius="24dp"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="@color/thm_shadow"
                app:sl_shadowRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shp_rect_rounded_white_medium">

                    <EditText        android:id="@+id/frg_make_edtRidle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="start"

                        android:hint="Type here..."
                        android:lines="7"
                        android:paddingStart="14dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="14dp"
                        android:textColor="@color/thm_blue_app"
                        android:textColorHint="@color/app_thm_txv_gray"
                        android:textCursorDrawable="@null" />
                </RelativeLayout>
            </com.dd.ShadowLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start"

                android:paddingStart="14dp"
                android:text="Add an image"
                android:textColor="@color/thm_red_app"
                android:textSize="@dimen/fontsize_xxlarge"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                >

                <com.dd.ShadowLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sl_cornerRadius="32dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="9dp">

                    <LinearLayout
                        android:id="@+id/frg_make_llInsert1"

                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            
                            android:padding="5dp"

                            android:paddingStart="15dp"
                            android:text="Insert"

                            android:textColor="@color/thm_red_app"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.dd.ShadowLayout>

                <ImageView
                    android:id="@+id/frg_make_inset1Imv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start"

                android:paddingStart="14dp"
                android:text="Answer*"
                android:textColor="@color/thm_red_app"
                android:textSize="@dimen/fontsize_xxlarge"
                android:textStyle="bold" />

            <com.dd.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:sl_cornerRadius="24dp"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="@color/thm_shadow"
                app:sl_shadowRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shp_rect_rounded_white_medium">

                    <EditText
                        android:id="@+id/frg_make_edtAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="start"
                        android:hint="Type here..."
                        android:lines="7"
                        android:paddingStart="14dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="14dp"
                        android:textColor="@color/thm_blue_app"
                        android:textColorHint="@color/app_thm_txv_gray"
                        android:textCursorDrawable="@null" />
                </RelativeLayout>
            </com.dd.ShadowLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:gravity="start"

                android:paddingStart="14dp"
                android:text="Add an image"
                android:textColor="@color/thm_red_app"
                android:textSize="@dimen/fontsize_xxlarge"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                >

                <com.dd.ShadowLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sl_cornerRadius="32dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="9dp">

                    <LinearLayout
                        android:id="@+id/frg_make_llInsert2"


                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            
                            android:padding="5dp"

                            android:paddingStart="15dp"
                            android:text="Insert"

                            android:textColor="@color/thm_red_app"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.dd.ShadowLayout>


                <ImageView
                    android:id="@+id/frg_make_inset2Imv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:fontFamily="@font/poppins_bold"
                android:gravity="start"

                android:paddingStart="14dp"
                android:text="Add a Rigoletto"
                android:textColor="@color/thm_red_app"
                android:textSize="@dimen/fontsize_xxlarge"
                android:textStyle="bold" />






            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frg_make_rcv_regilto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="5"
                tools:listitem="@layout/lay_item_regilto" />
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/frg_make_rlRegiltoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">


                <ImageView
                    android:id="@+id/imv_mast"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_master_2" />


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edttext_height_medium"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/imv_mast"
                    android:background="@drawable/ic_bg_regi">


                    <EditText
                        android:id="@+id/frg_make_edtRegilto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="40dp"
                        android:layout_toEndOf="@id/imv_search"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="center_vertical"
                        android:hint="Type here..."
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textColor="@color/thm_blue_app"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_mini" />


                    <ImageView
                        android:id="@+id/frg_make_imvRegilto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_note" />
                </RelativeLayout>


            </RelativeLayout>
            <ImageView
                android:id="@+id/frg_make_imv_addRegiltoMain"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:paddingStart="14dp"
                android:src="@drawable/ic_plus_circle" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/frg_make_llSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shp_rect_rounded_app_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">


            <TextView
                android:id="@+id/frg_make_txvSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                
                android:fontFamily="@font/aladin_regular"
                android:text="Submit"

                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_medium"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>