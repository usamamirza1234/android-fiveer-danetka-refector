<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/act_intro_rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include layout="@layout/act_lay_toolabar" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/aladin_regular"
                android:padding="10dp"
                android:text="Payment"
                android:textColor="@color/thm_orange_app"
                android:textSize="@dimen/fontsize_extralarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvUseGameCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="Game Credits available - 00"
                android:textColor="@color/thm_orange_app"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txvPaymentDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="XYZ"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:visibility="gone">

                <com.dd.ShadowLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sl_cornerRadius="32dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="9dp">

                    <LinearLayout
                        android:id="@+id/fg_signin_llGoogle"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_google" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:lines="1"
                            android:padding="5dp"
                            android:paddingStart="5dp"
                            android:text="Credit card"

                            android:textColor="@color/black"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.dd.ShadowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp">

                <com.dd.ShadowLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sl_cornerRadius="32dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="9dp">

                    <RelativeLayout
                        android:id="@+id/rlPaypalCredit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_white"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:src="@drawable/ic_visa" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:lines="1"
                            android:padding="5dp"
                            android:paddingStart="5dp"
                            android:text="Credit card"

                            android:textColor="@color/black"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </com.dd.ShadowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp">

                <com.dd.ShadowLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sl_cornerRadius="32dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="9dp">

                    <RelativeLayout
                        android:id="@+id/rlPaypal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_white"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:src="@drawable/ic_paypal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:lines="1"
                            android:padding="5dp"
                            android:paddingStart="5dp"
                            android:text="Paypal"

                            android:textColor="@color/black"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </com.dd.ShadowLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="120">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="30"
                        android:background="@color/thm_gray_app" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edttext_height_medium"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:background="@null"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="5dp"
                        android:text="@string/fg_signin_or"

                        android:textColor="@color/thm_gray_app"
                        android:textSize="@dimen/fontsize_medium"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="30"
                        android:background="@color/thm_gray_app" />

                </LinearLayout>


                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="true"

                    android:src="@drawable/ic_get_more" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:id="@+id/frg_getmore"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_orange"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:lines="1"
                            android:padding="5dp"
                            android:paddingStart="5dp"
                            android:text="Get More !!"

                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_large"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.dd.ShadowLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:sl_cornerRadius="32dp"
                        app:sl_dx="0dp"
                        app:sl_dy="0dp"
                        app:sl_shadowColor="@color/thm_shadow"
                        app:sl_shadowRadius="9dp">

                        <RelativeLayout
                            android:id="@+id/rlUseGameCredits"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height_large"
                            android:layout_gravity="center"

                            android:background="@drawable/shp_rect_rounded_white"

                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:src="@drawable/ic_paypal"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="5dp"
                                android:paddingStart="5dp"
                                android:text="Use Game Credits"

                                android:textColor="@color/black"
                                android:textSize="@dimen/fontsize_mini"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </com.dd.ShadowLayout>

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
