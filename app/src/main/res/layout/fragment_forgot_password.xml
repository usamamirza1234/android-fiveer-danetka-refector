<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/act_intro_rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include layout="@layout/act_lay_toolabar" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"

                    android:padding="10dp"

                    android:src="@drawable/ic_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/frg_forget_password_"
                    android:textColor="@color/thm_blue_app"
                    android:textSize="@dimen/fontsize_xxxlarge"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_line_tiny" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="20dp"

                    android:background="@null"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:padding="5dp"
                    android:text="@string/frg_forget_password_desc"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <EditText
                        android:id="@+id/frg_signup_edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edttext_height_medium"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="@string/frg_forget_password_email"
                        android:inputType="textEmailAddress"

                        android:lines="1"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/thm_blue_app"
                        android:textColorHint="@color/thm_gray_app"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_medium"
                        android:textStyle="normal" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/thm_gray_app"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical">

                    <com.dd.ShadowLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:sl_cornerRadius="32dp"
                        app:sl_dx="0dp"
                        app:sl_dy="0dp"
                        app:sl_shadowColor="@color/thm_shadow"
                        app:sl_shadowRadius="9dp">

                        <RelativeLayout
                            android:id="@+id/frg_frgtPass_rlSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height_large"

                            android:background="@drawable/shp_rect_rounded_app_blue"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@null"
                                android:lines="1"


                                android:text="@string/frg_forget_password_submit"

                                android:textColor="@color/white"
                                android:textSize="@dimen/fontsize_medium"
                                android:textStyle="normal" />

                        </RelativeLayout>
                    </com.dd.ShadowLayout>

                    <com.dd.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        app:sl_cornerRadius="32dp"
                        app:sl_dx="0dp"
                        app:sl_dy="0dp"
                        app:sl_shadowColor="@color/thm_shadow"
                        app:sl_shadowRadius="9dp">

                        <RelativeLayout
                            android:id="@+id/frg_frgtPass_rlEmailsent"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height_large"

                            android:background="@drawable/shp_rect_rounded_app_green"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@null"
                                android:lines="1"


                                android:text="Email sent"

                                android:textColor="@color/white"
                                android:textSize="@dimen/fontsize_medium"
                                android:textStyle="normal" />

                        </RelativeLayout>
                    </com.dd.ShadowLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frg_forgetpass_llBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="120">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"

                        android:gravity="center"
                        android:text="@string/back_icon"
                        android:textAlignment="center"
                        android:textColor="@color/thm_blue_app"
                        android:textColorHint="@color/thm_blue_app"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_small"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:hint=""
                        android:lines="1"
                        android:padding="5dp"
                        android:text="Back to"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:hint=""
                        android:lines="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="log in"
                        android:textAlignment="center"
                        android:textColor="@color/thm_blue_app"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/fontsize_small" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
