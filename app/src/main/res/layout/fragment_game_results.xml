<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/act_intro_rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/act_lay_toolabar" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/aladin_regular"
                android:padding="10dp"
                android:text="Results"
                android:textColor="@color/thm_orange_app"
                android:textSize="@dimen/fontsize_extralarge"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_large"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="Master"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_large"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="Investigator(s)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_large"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="No of Rigoletto used"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_large"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <com.dd.ShadowLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sl_cornerRadius="32dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_app_blue"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:lines="1"

                            android:paddingEnd="10dp"
                            android:text="Save my Results"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_medium"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_list" />

                    </LinearLayout>
                </com.dd.ShadowLayout>

                <com.dd.ShadowLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:sl_cornerRadius="32dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="9dp">

                    <LinearLayout
                        android:id="@+id/frg_restPass_llConfirmed"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_app_green"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"

                            android:lines="1"
                            android:text="Results Saved"

                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_medium"
                            android:textStyle="normal" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/ic_white_tick" />

                    </LinearLayout>
                </com.dd.ShadowLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"

                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/frg_presigin_txvPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/aladin_regular"
                    android:padding="10dp"
                    android:text="@string/frg_rate_app"
                    android:textColor="@color/thm_orange_app"
                    android:textSize="@dimen/fontsize_extralarge"
                    android:textStyle="bold" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"

                android:background="@null"
                android:gravity="center"
                android:hint="@string/frg_rate_app_hard"
                android:lines="1"
                android:padding="5dp"
                android:textColor="@color/thm_blue_app"
                android:textColorHint="@color/thm_blue_app"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_Easy"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <RatingBar

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:rating="3.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"

                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_Hard"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"

                android:background="@null"
                android:gravity="center"
                android:hint="@string/frg_rate_app_you_enjoyed"
                android:lines="1"
                android:padding="5dp"
                android:textColor="@color/thm_blue_app"
                android:textColorHint="@color/thm_blue_app"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_Boriiing"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <RatingBar

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:rating="3.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"

                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_WOW"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"

                android:background="@null"
                android:gravity="center"
                android:hint="@string/frg_rate_app_helpful"
                android:lines="1"
                android:padding="5dp"
                android:textColor="@color/thm_blue_app"
                android:textColorHint="@color/thm_blue_app"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_no"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <RatingBar

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:rating="3.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"

                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_yes"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"

                android:background="@null"
                android:gravity="center"
                android:hint="@string/frg_rate_app_how_hard"
                android:lines="1"
                android:padding="5dp"
                android:textColor="@color/thm_blue_app"
                android:textColorHint="@color/thm_blue_app"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/fontsize_small"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_Nope"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <RatingBar

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:rating="3.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"

                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/frg_rate_app_sure"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/thm_blue_app"
                    android:textColorHint="@color/thm_blue_app"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:layout_margin="30dp"
                android:background="@drawable/shp_rect_rounded_app_blue">

                <TextView android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Leave a comment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_height_small"
                    android:textStyle="bold" />


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>